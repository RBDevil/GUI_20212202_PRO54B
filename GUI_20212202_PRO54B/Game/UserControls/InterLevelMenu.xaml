<UserControl x:Class="Game.UserControls.InterLevelMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.UserControls"
             xmlns:Game="clr-namespace:Game"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500"
             FontFamily="Consolas"
             FontSize="15">

    <UserControl.DataContext>
        <Game:InterLevelMenuViewModel/>
    </UserControl.DataContext>

    <Grid Background="#416e2f">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Background="#416e2f">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0">
                <Label Content="Score: " Foreground="#192956" Background="#ea9200" Margin="10" Width="100" HorizontalContentAlignment="Center"/>
                <Label Content="{Binding Score, UpdateSourceTrigger=PropertyChanged}" Foreground="#192956" Background="#ea9200" Margin="10" Width="50" HorizontalContentAlignment="Center"/>
                <Label Content="Level: " Foreground="#192956" Background="#ea9200" Margin="10" Width="100" HorizontalContentAlignment="Center"/>
                <Label Content="{Binding Level}" Foreground="#192956" Background="#ea9200" Margin="10" Width="50" HorizontalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1">
                <Label Content="Coin magnet level: " Foreground="#192956" Background="#ea9200" Margin="4.5"/>
                <Label Content="{Binding CoinMagnetLevel, UpdateSourceTrigger=PropertyChanged}" Foreground="#192956" Background="#ea9200" Margin="4.5"/>
                <Label Content="Minigun level: " Foreground="#192956" Background="#ea9200" Margin="4.5"/>
                <Label Content="{Binding MinigunLevel, UpdateSourceTrigger=PropertyChanged}" Foreground="#192956" Background="#ea9200" Margin="4.5"/>
                <Label Content="Point multiplier level: " Foreground="#192956" Background="#ea9200" Margin="4.5"/>
                <Label Content="{Binding PointMultiplierLevel, UpdateSourceTrigger=PropertyChanged}" Foreground="#192956" Background="#ea9200" Margin="4.5"/>
                <Label Content="Car level: " Foreground="#192956" Background="#ea9200" Margin="5"/>
                <Label Content="{Binding CarLevel, UpdateSourceTrigger=PropertyChanged}" Foreground="#192956" Background="#ea9200" Margin="4.5"/>
            </StackPanel>

        </Grid>
        
        <StackPanel Grid.Row="1">
            <Button Content="Upgrade Coin magnet" Command="{Binding CoinMagnetUpdateCommand}" Margin="15" Background="#DD6900" Foreground="#192956" Width="250"/>
            <Button Content="Upgrade Minigun" Command="{Binding MinigunUpdateCommand}" Margin="15"  Background="#DD6900" Foreground="#192956" Width="250"/>
            <Button Content="Upgrade Point multiplier" Command="{Binding PointMultiplierUpdateCommand}" Margin="15"  Background="#DD6900" Foreground="#192956" Width="250"/>
            <Button Content="Upgrade Car" Command="{Binding CarUpdateCommand}" Margin="15"  Background="#DD6900" Foreground="#192956" Width="250"/>
            <Button Content="Next level" Click="Button_Click" Margin="15"  Background="#DD6900" Foreground="#192956" Width="250"/>
        </StackPanel>

    </Grid>
</UserControl>
