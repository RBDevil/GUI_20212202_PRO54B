<UserControl x:Class="Game.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid Background="Black">
        <Button Content="Play" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="100" Click="Button_Click"   />
        <Button Content="Save" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="100" />
        <Button Content="Exit" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Height="100" />

    </Grid>
</UserControl>
